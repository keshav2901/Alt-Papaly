<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Authentication.ID">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6E9EE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="40dp"
            android:background="#E6E9EE"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@android:color/transparent"
                android:src="@drawable/horizontal_logo"/>

            <com.kofigyan.stateprogressbar.StateProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:spb_checkStateCompleted="true"
                app:spb_currentStateDescriptionColor="#0F9D58"
                app:spb_currentStateNumber="four"
                app:spb_maxStateNumber="four"
                app:spb_stateBackgroundColor="#999999"
                app:spb_stateDescriptionColor="#808080"
                app:spb_stateForegroundColor="#348FD1"
                app:spb_stateNumberBackgroundColor="#808080"
                app:spb_stateNumberForegroundColor="#eeeeee"
                android:background="@android:color/transparent"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:layout_marginTop="80dp"
                >

                <EditText
                    android:id="@+id/phonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Unique PAPALY ID"
                    android:background="@drawable/inputbackground"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="20dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColorHint="#999999"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingVertical="5dp"
                    android:text="Not having any PAPALY ID yet."
                    android:textStyle="bold"
                    android:textColor="#999999"
                    android:textSize="17dp"
                    android:paddingRight="50dp"
                    android:paddingLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact us."
                    android:textSize="17dp"
                    android:background="@android:color/transparent"
                    android:textStyle="bold"
                    android:textColor="#348FD1"
                    android:paddingLeft="10dp"/>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/idPrevious"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/roundbutton2"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:layout_alignParentLeft="true"
                    />

                <ImageButton
                    android:id="@+id/idNext"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/roundbutton1"
                    android:src="@drawable/ic_baseline_arrow_forward_24"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>